<Page x:Class="DependencyViewer.Pages.DragAndDropPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DependencyViewer.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DragAndDropView">

    <Grid Drop="Grid_Drop" AllowDrop="true">

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <Image Grid.Column="1" Grid.Row="1" Source="/Images/CsFormatImage.png"/>
            <TextBlock Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center"
           FontSize="20"
           Text="Переместить папку с .cs файлами"/>
        </Grid>
        
    </Grid>
</Page>
